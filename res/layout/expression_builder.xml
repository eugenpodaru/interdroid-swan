<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center">
	<LinearLayout android:id="@+id/typedvalue_container"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:gravity="center">
		<CheckBox android:id="@+id/typedvalue_not"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text="not" />
		<Button android:id="@+id/typedvalue_left" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:text=" . "
			android:layout_weight="1" android:maxWidth="100dp" />
		<Button android:id="@+id/typedvalue_comparator"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text=" ? " />
		<Button android:id="@+id/typedvalue_right"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text=" . " android:layout_weight="1" android:maxWidth="100dp" />
		<Button android:id="@+id/typedvalue_ok" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:text="ok"
			android:enabled="false" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center">
		<Button android:id="@+id/expression_left" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:text=" . "
			android:enabled="false" android:layout_weight="1" />
		<Button android:id="@+id/expression_operator"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text=" ? " android:enabled="false" />
		<Button android:id="@+id/expression_right"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:text=" . " android:enabled="false" android:layout_weight="1" />
		<Button android:id="@+id/expression_ok" android:layout_width="wrap_content"
			android:layout_height="match_parent" android:text="ok"
			android:enabled="false" />
	</LinearLayout>
	<ListView android:id="@+id/expression_list"
		android:layout_below="@id/typedvalue_container" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1">
	</ListView>


	<Button android:id="@+id/expression_finished"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="ok" android:enabled="false" />


</LinearLayout>
